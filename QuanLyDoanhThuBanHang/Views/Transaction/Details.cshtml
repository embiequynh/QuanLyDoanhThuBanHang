@model SalesManagementApp.Models.Transaction

@{

}

<div class="container-sm mt-4" style="max-width: 600px;">
    <h2 class="text-primary mb-4">@ViewData["Title"]</h2> <!-- Xóa lớp căn giữa -->

    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Thông tin giao dịch</h4>
        </div>
        <div class="card-body">
            <ul class="list-group">
                <li class="list-group-item"><strong>Mã giao dịch:</strong> @Model.TransactionCode</li>
                <li class="list-group-item"><strong>Tên khách hàng:</strong> @Model.Customer</li>
                <li class="list-group-item"><strong>Tên sản phẩm:</strong> @Model.Product</li>
                <li class="list-group-item"><strong>Ngày giao dịch:</strong> @Model.TransactionDate.ToString("dd/MM/yyyy")</li>
                <li class="list-group-item"><strong>Đơn giá:</strong> @Model.UnitPrice.ToString("N0") VND</li>
                <li class="list-group-item"><strong>Số lượng:</strong> @Model.Quantity</li>
                <li class="list-group-item"><strong>Chiết khấu:</strong> @Model.Discount.ToString("P0")</li>
                <li class="list-group-item">
                    <strong>Thành tiền:</strong>
                    @((Model.UnitPrice * Model.Quantity * (1 - Model.Discount)).ToString("N0")) VND
                </li>
                <li class="list-group-item"><strong>Trạng thái:</strong> @Model.Status</li>
            </ul>
        </div>
    </div>

    <div class="mt-3">
        <a href="@Url.Action("Index", "Transaction")" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Quay lại
        </a>
    </div>
</div>
