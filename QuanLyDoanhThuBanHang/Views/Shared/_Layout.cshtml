<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]Trang chủ</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/QuanLyDoanhThuBanHang.styles.css" />
    <style>
        body {
            background-size: cover;
            background-position: center;
            background-attachment: fixed;
            font-family: Arial, sans-serif;
        }

        .container {
            margin-top: 50px;
            text-align: center;
            background: rgba(255, 255, 255, 0.8);
            padding: 40px;
            border-radius: 10px;
        }

        h1 {
            color: darkblue;
            font-size: 32px;
            margin-bottom: 30px;
        }

        .btn-custom {
            padding: 15px 30px;
            font-size: 18px;
            margin: 20px;
            background-color: cornflowerblue;
            color: white;
            border: none;
            border-radius: 5px;
            text-decoration: none;
        }

            .btn-custom:hover {
                background-color: gray;
            }

        .btn-container {
            display: flex;
            justify-content: center;
            gap: 20px;
        }

        /* Header style */
        header {
            background-color: #003366; /* Nền xanh đậm */
            color: white; /* Màu chữ trắng */
            padding: 15px 0; /* Padding cho header */
        }

        /* Navbar style */
        .navbar {
            background-color: #003366; /* Nền xanh đậm cho navbar */
        }

            .navbar .navbar-brand,
            .navbar .nav-link {
                color: white !important; /* Màu chữ trắng cho navbar items */
            }

            .navbar .navbar-toggler-icon {
                background-color: white; /* Màu icon hamburger trong navbar */
            }

            .navbar .nav-link:hover {
                color: lightgray; /* Màu chữ khi hover */
            }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">Trang chủ</a>

                <!-- Navbar-toggler chỉ cần một lần duy nhất -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="/Transaction">Theo dõi giao dịch</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Transaction/Revenue">Quản lý doanh thu</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    @RenderBody()  <!-- Đây là vị trí nơi nội dung từ các view sẽ được chèn vào -->
</body>
</html>
