    @*         <a href="@Url.Action("Revenue", "Transaction")" class="btn-custom">Quản lý doanh thu</a> *@
    @*     </div> *@
    @* </div> *@

    @RenderBody()  <!-- Đây là vị trí nơi nội dung từ các view sẽ được chèn vào -->
</body>
</html>
